# API Keys (仮想通貨データ取得用 - オプション)
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here
COINGECKO_API_KEY=your_coingecko_api_key_here
CRYPTOCOMPARE_API_KEY=your_cryptocompare_api_key_here

# ClaudeCode環境では以下のAPI設定は不要
# OPENAI_API_KEY=not_required_in_claude_code
# TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
# GOOGLE_NEWS_API_KEY=your_google_news_api_key_here

# WordPress settings
WP_URL=https://your-wordpress-site.com
WP_USERNAME=your_wordpress_username
WP_PASSWORD=your_wordpress_app_password

# Database
DB_PATH=data/crypto_media.db

# Schedule settings
WEEKLY_SUMMARY_DAY=Monday
WEEKLY_SUMMARY_TIME=09:00
DAILY_NEWS_TIME=10:00

# Content generation settings
MAX_ARTICLES_PER_DAY=5
ARTICLE_MIN_LENGTH=500
ARTICLE_MAX_LENGTH=2000

# Rate limiting (requests per minute)
API_RATE_LIMIT=60
OPENAI_RATE_LIMIT=20

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/crypto_media.log

# News sources RSS feeds
RSS_FEEDS_COINDESK=https://www.coindesk.com/arc/outboundfeeds/rss/
RSS_FEEDS_COINTELEGRAPH=https://cointelegraph.com/rss
RSS_FEEDS_DECRYPT=https://decrypt.co/feed
RSS_FEEDS_COINBUREAU=https://www.coinbureau.com/feed/

# Language settings
CONTENT_LANGUAGE=ja
TARGET_AUDIENCE=general